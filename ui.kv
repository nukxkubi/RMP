MDScreenManager:
    md_bg_color:app.theme_cls.backgroundColor

    MDScreen:
        name: "Login"

        MDBoxLayout:
            spacing: '10dp'
            adaptive_width:True
            adaptive_size:True
            adaptive_height:True
            pos_hint:{'center_x':.5,'center_y':.5}
            orientation:"vertical"

            MDLabel:
                adaptive_height: True
                theme_font_size:'Custom'
                font_size:'24sp'
                theme_font_name:'Custom'
                font_name: 'Bahnschrift'
                text:"Вход"
                halign:'center'

            MDTextField:
                id:login_login
                mode:"outlined"

                MDTextFieldLeadingIcon:
                    icon:"account"

                MDTextFieldHintText:
                    text: "Логин"

            MDTextField:
                id:login_password
                mode:"outlined"
                password: True
                password_mask: "*"

                MDTextFieldLeadingIcon:
                    icon:"key"

                MDTextFieldHintText:
                    text: "Пароль"

            MDBoxLayout:
                spacing: '10dp'
                adaptive_width:True
                adaptive_size:True
                adaptive_height:True
                orientation:"horizontal"

                MDButton:
                    style:"filled"
                    on_press:
                        root.current = 'logout'

                    MDButtonIcon:
                        icon:"logout"

                    MDButtonText:
                        text:"Регистрация"

                MDButton:
                    style:"filled"
                    on_press: app.app_login(login_login.text,login_password.text)
                    MDButtonIcon:
                        icon:"login"
                    MDButtonText:
                        text:"Вход"

        MDFloatLayout:
            MDIconButton:
                icon:'eye-off'
                pos: login_password.pos[0] + login_password.width - self.width - dp(5), login_password.pos[1] + login_password.height/2 - self.height/2
                on_press:
                    self.icon = 'eye'
                    login_password.password = False

                on_release:
                    self.icon = 'eye-off'
                    login_password.password = True

    MDScreen:
        name: "logout"

        MDIconButton:
            icon:'close'
            style:'filled'
            on_release:
                root.current = 'Login'
            pos_hint:{'center_x':.5}

        MDBoxLayout:
            theme_font_size:'Custom'
            size_hint_x: None
            width:'300dp'
            spacing: '10dp'
            adaptive_height:True
            pos_hint:{'center_x':.5,'center_y':.5}
            orientation:"vertical"

            MDLabel:
                adaptive_height: True
                theme_font_size:'Custom'
                font_size:'24sp'
                theme_font_name:'Custom'
                font_name: 'Bahnschrift'
                text:"Вход"
                halign:'center'

            MDTextField:
                id:register_login
                mode:"outlined"

                MDTextFieldLeadingIcon:
                    icon:"account"

                MDTextFieldHintText:
                    text: "Логин"

            MDTextField:
                id:register_password
                mode:"outlined"
                password: True
                password_mask: "*"

                MDTextFieldLeadingIcon:
                    icon:"key"

                MDTextFieldHintText:
                    text: "Пароль"

            MDTextField:
                id:register_rpassword
                mode:"outlined"
                password: True
                password_mask: "*"

                MDTextFieldLeadingIcon:
                    icon:"key"

                MDTextFieldHintText:
                    text: "Повторите пароль"

            MDButton:
                style:"filled"
                pos_hint:{'center_x':.5}
                on_press: app.app_logout(register_login.text,register_password.text,register_rpassword.text)

                MDButtonIcon:
                    icon:"logout"

                MDButtonText:
                    text:"Регистрация"

        MDFloatLayout:
            MDIconButton:
                icon:'eye-off'
                pos: register_password.pos[0] + register_password.width - self.width - dp(5), register_password.pos[1] + register_password.height/2 - self.height/2
                on_press:
                    self.icon = 'eye'
                    register_password.password = False

                on_release:
                    self.icon = 'eye-off'
                    register_password.password = True
                    #self.icon = 'eye' if self.icon == 'eye-off' else 'eye-off'
                    #login_password.password = True if login_password.password == False else False
                    #login_password.password = self.icon == 'eye'

    MDScreen:
        id:scr_main
        name: "main"

        MDBoxLayout:
            spacing: 3
            orientation:'vertical'
            adaptive_height:True
            adaptive_width:True
            width:'200dp'
            height:'200dp'
            pos_hint:{'center_x':.5,'center_y':.5}

            MDButton:
                style:'tonal'
                theme_width:'Custom'
                width:'125dp'
                pos_hint:{'center_x':.5}
                size_hint_x: 1
                on_release: app.start_game()

                MDButtonIcon:
                    icon:'play'
                    x:btn1_text.x - self.width - dp(10)

                MDButtonText:
                    id:btn1_text
                    text:'Играть'
                    pos_hint:{'center_x':.5,'center_y':.5}

            MDButton:
                pos_hint:{'center_x':.5,'center_y':.5}
                style:'tonal'
                pos_hint:{'center_x':.5}
                theme_width:'Custom'
                width:'125dp'
                size_hint_x: 1

                MDButtonIcon:
                    icon:'trophy'
                    x:btn4_text.x - self.width - dp(10)

                MDButtonText:
                    id:btn4_text
                    text:'Рейтинг'
                    pos_hint:{'center_x':.5,'center_y':.5}


            MDButton:
                style:'tonal'
                pos_hint:{'center_x':.5}
                theme_width:'Custom'
                width:'125dp'
                size_hint_x: 1
                on_release:
                    root.current = 'settings'

                MDButtonIcon:
                    icon:'cog'
                    x:btn2_text.x - self.width - dp(10)

                MDButtonText:
                    id:btn2_text
                    text:'Настройки'
                    pos_hint:{'center_x':.5,'center_y':.5}

            MDButton:
                style:'tonal'
                pos_hint:{'center_x':.5}
                theme_width:'Custom'
                width:'125dp'
                size_hint_x: 1
                on_release:
                    app.stop()

                MDButtonIcon:
                    icon:'exit-to-app'
                    x:btn3_text.x - self.width - dp(10)

                MDButtonText:
                    id:btn3_text
                    text:'Выход'
                    pos_hint:{'center_x':.5,'center_y':.5}

        MDIconButton:
            style:'filled'
            icon:'account-cancel'

            x:scr_main.x + scr_main.width - dp(10) - self.width
            y:scr_main.y + scr_main.height - dp(10) - self.height

            on_release:
                login_login.text =''
                login_password.text=''
                app.close_session()
                root.current = 'Login'

            x: scr_main.x + scr_main.width - self.width
            y: scr_main.y + scr_main.height - self.height

    MDScreen:
        name:'settings'

        MDBoxLayout:
            orientation:'vertical'

            MDTopAppBar:
                theme_bg_color:'Custom'
                md_bg_color: app.theme_cls.primaryColor

                MDTopAppBarLeadingButtonContainer: # Данный контейнер с кнопками
                    MDActionTopAppBarButton:
                        icon:'arrow-left'
                        theme_icon_color:'Custom'
                        icon_color: [1,1,1] if app.theme_cls.theme_style == 'Light' else [0, 0, 0]
                        on_press: root.current = 'main'

                MDTopAppBarTitle:
                    text:'Настройки'
                    theme_icon_color:'Custom'
                    icon_color: [1,1,1] if app.theme_cls.theme_style == 'Light' else [0,0,0]

            MDScrollView:
                MDBoxLayout:
                    orientation:'vertical'
                    adaptive_height:True

                    MDBoxLayout:
                        padding: '25dp'
                        orientation:'horizontal'
                        adaptive_height: True
                        spacing:'25dp'

                        MDIcon:
                            icon:'theme-light-dark'
                            pos_hint:{'center_y':.5}

                        MDLabel:
                            text:'Тема приложения'
                            adaptive_height: True
                            size_hint_x:1
                            theme_line_height:'Custom'
                            line_height: 1
                            pos_hint:{'center_y':.5}

                        MDSwitch:
                            active: True if app.theme_cls.theme_style == 'Dark' else False
                            icon_active:'weather-night'
                            icon_inactive:'weather-sunny'
                            pos_hint:{'center_y':.5}
                            on_active:
                                app.theme_cls.theme_style = 'Dark' if self.active else 'Light'
                                app.config.set('THEMING','theme_style', app.theme_cls.theme_style)
                                app.config.write()

                    MDBoxLayout:
                        padding: '25dp'
                        orientation:'horizontal'
                        adaptive_height: True
                        spacing:'25dp'

                    MDBoxLayout:
                        padding: '25dp'
                        orientation:'horizontal'
                        adaptive_height: True
                        spacing:'25dp'

                        MDIcon:
                            icon:'palette'
                            pos_hint:{'center_y':.5}

                        MDLabel:
                            text:'Цветавая схема'
                            adaptive_height: True
                            size_hint_x:1
                            theme_line_height:'Custom'
                            line_height: 1
                            pos_hint:{'center_y':.5}

                        MDCheckbox:
                            active:True if app.theme_cls.primary_palette == self.value else False
                            value:'Green'
                            group:'set_acc_color'
                            color_active:self.value.lower()
                            color_inactive:self.value.lower()
                            theme_font_size:'Custom'
                            font_size:'36sp'
                            on_active: app.radio_change_color(*args)

                        MDCheckbox:
                            active:True if app.theme_cls.primary_palette == self.value else False
                            value:'Blue'
                            group:'set_acc_color'
                            theme_font_size:'Custom'
                            font_size:'36sp'
                            color_active:self.value.lower()
                            color_inactive:self.value.lower()
                            on_active: app.radio_change_color(*args)

                        MDCheckbox:
                            active:True if app.theme_cls.primary_palette == self.value else False
                            value:'Red'
                            group:'set_acc_color'
                            theme_font_size:'Custom'
                            font_size:'36sp'
                            color_active:self.value.lower()
                            color_inactive:self.value.lower()
                            on_active: app.radio_change_color(*args)

    MDScreen:
        name:'game'

        MDBoxLayout:
            orientation:'vertical'

            MDTopAppBar:
                theme_bg_color: 'Custom'
                md_bg_color: app.theme_cls.primaryColor

                MDTopAppBarLeadingButtonContainer: # Левый контейнер с кнопками
                    MDActionTopAppBarButton: # Кнопки для контейнера AppBar
                        icon: 'arrow-left'
                        theme_icon_color: 'Custom'
                        icon_color: [1, 1, 1] if app.theme_cls.theme_style == 'Light' else [0, 0, 0]
                        on_press:
                            root.current = 'main'

                    MDTopAppBarTitle:
                        text: 'Таймер: 00:00'
                        theme_text_color: 'Custom'
                        text_color: [1, 1, 1] if app.theme_cls.theme_style == 'Light' else [0, 0, 0]

                    MDTopAppBarLeadingButtonContainer:
                        MDActionTopAppBarButton: # Кнопки для контейнеров AppBar
                            icon: 'restart'
                            theme_icon_color: 'Custom'
                            icon_color: [1, 1, 1] if app.theme_cls.theme_style == 'Light' else [0, 0, 0]
                            on_press: app.start_game()

            MDBoxLayout:
                orientation: 'vertical'
                padding: '25dp'

                MDBoxLayout:
                    id: game_layout
                    orientation: 'vertical'

                    MDWidget:
                        pos_hint: {'center_x':.5, 'center_y':.5}
                        md_bg_color: [.6, .6 ,.6]
                        size_hint_x: None
                        size_hint_y: 1
                        width: game_layout.width
                        height: 100
